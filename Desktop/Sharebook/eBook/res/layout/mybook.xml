<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/headbackground"
        android:gravity="center"
        android:text="书 库"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/mybookuserimg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:src="@drawable/head01" />

    <TextView
        android:id="@+id/mybookusername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/mybookuserimg"
        android:layout_marginLeft="1dp"
        android:layout_toRightOf="@+id/mybookuserimg"
        android:text="UserName"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/mybooknum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mybookusername"
        android:layout_below="@+id/mybookusername"
        android:layout_marginTop="4dp"
        android:text="藏书总量：6"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/mybooklend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mybookuserimg"
        android:layout_alignLeft="@+id/mybooknum"
        android:text="借出数量：3"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mybookuserimg"
        android:layout_below="@+id/mybookuserimg"
        android:layout_marginTop="15dp"
        android:text="我的图书"
        android:textSize="20sp" />

    <Button
        android:id="@+id/addmybook"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView5"
        android:layout_marginRight="59dp"
        android:background="@drawable/view_add" />

    <Button
        android:id="@+id/refreshmybook"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/addmybook"
        android:layout_marginRight="18dp"
        android:background="@drawable/view_refresh" />

    <ListView
        android:id="@+id/mybooklist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_below="@+id/addmybook" >
    </ListView>

</RelativeLayout>
