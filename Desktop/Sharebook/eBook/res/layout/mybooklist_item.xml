<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView
        android:id="@+id/mybooknameid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/mybookimageid"
        android:text="TextView"
        android:textSize="20sp" />
    
    <TextView
        android:id="@+id/mybookauthorid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mybooknameid"
        android:layout_below="@+id/mybooknameid"
        android:text="TextView"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/mybookintroid"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mybookimageid"
        android:layout_alignLeft="@+id/mybookauthorid"
        android:layout_below="@+id/mybookauthorid"
        android:text="TextView" />

    <ImageView
        android:id="@+id/mybookimageid"
        android:layout_width="80dp"
        android:layout_height="110dp"
        android:layout_marginTop="6dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/book1" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/mybooknameid"
        android:entries="@array/SpinnerContent"
        android:gravity="right" />

</RelativeLayout>
