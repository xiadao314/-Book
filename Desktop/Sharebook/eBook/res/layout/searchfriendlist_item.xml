<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/searchedimgid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="6dp"
        android:src="@drawable/head01" />

    <TextView
        android:id="@+id/searchednameid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/searchedimgid"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/searchedimgid"
        android:text="TextView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/searchedbookid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/searchednameid"
        android:layout_below="@+id/searchednameid"
        android:text="TextView"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/searchedintroid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/searchedimgid"
        android:layout_alignLeft="@+id/searchedbookid"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/searchedbookid"
        android:text="TextView" />

    <Button
        android:id="@+id/searchedaddid"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="70dp"
        android:layout_height="37dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/searchednameid"
        android:text="添加" />

</RelativeLayout>